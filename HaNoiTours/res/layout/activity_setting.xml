<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/toggleSatelline"
        android:text="@string/Satelline"
        android:textSize="25sp"/>

    <ToggleButton
        android:id="@id/toggleSatelline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="setSatelline"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/toggleTraffic"
        android:layout_below="@id/toggleSatelline"
        android:text="@string/Traffic"
        android:textSize="25sp"/>

    <ToggleButton
        android:id="@id/toggleTraffic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toggleSatelline"
        android:layout_alignParentRight="true"
        android:onClick="setTraffic"/>
    
</RelativeLayout>
